doctype html
html(ng-app="ocf.tw",ng-cloak,lang="zh-Hant")
    head
        meta(charset="utf-8")
        meta(name="viewport",content="width=device-width, initial-scale=1.0")
        meta(property="og:title",content="開放文化基金會 ocf.tw")
        meta(property="og:description",content="財團法人開放文化基金會於民國 103 年 6 月，由台北市政府文化局，北市文化文創字第10331440100號函核准成立，本基金會致力於推廣各類開放文化活動，包括: 開放源碼、開放標準、開放硬體、開放資料、開放系統等相關領域之活動。")
        //meta(property="og:url",content="http://ocf.tw/#{lang}/")
        meta(property="og:type",content="website")
        meta(property="og:image",content="http://ocf.tw/images/ocf-logo-2.jpg")
        link(rel="SHORTCUT ICON",href="/ocf.ico")
        block title
        link(rel="stylesheet", type="text/css", href="/css/app.css")
        link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.11.0/css/semantic.min.css")
        link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/Han/2.2.3/han.css")
        script(src='//cdn.firebase.com/v0/firebase.js')
        script(src='/js/vendor.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/semantic-ui/0.11.0/javascript/semantic.min.js')
        script(src='/js/app.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/Han/2.2.3/js/han.js')
        script(type="text/javascript").
          (function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = "//connect.facebook.net/zh_TW/all.js#xfbml=1";
              fjs.parentNode.insertBefore(js, fjs);
          }(document, 'script', 'facebook-jssdk'));

        block script
    body
        #header
            #header_inner_container
                #logo
                    a(href="/"): img(src="/imgs/logo.png")
                #social_block.hidden-phone
                    //i.facebook.sign.large.icon
                    //i.github.sign.large.icon
                    a(href='https://github.com/ocftw')
                      i.inverted.large.github.sign.icon
                    a(href='https://www.facebook.com/www.ocf.tw')
                      i.inverted.large.facebook.icon
                    //#fb_block
                        #fb-root
                        .fb-like(data-href='https://www.facebook.com/www.ocf.tw', data-layout='button_count', data-action='like', data-show-faces='true', data-share='true')

                .translator(ng-controller="langCtrl")
                    .ui.mini.purple.button(translate='BUTTON_LANG_TW', ng-click="changeLang('zh-TW')") 中文
                    .ui.mini.red.button(translate='BUTTON_LANG_EN', ng-click="changeLang('en-US')") English
                    .clearfix
        #container

            include ./nav
            block content

    #footer.hidden-phone
        #sitemap-panel
            .map-entry
                .map-caption(translate="FOOTER_SOCIAL_WEB"): | 社群網站
                //- .map-item: a(href="/about.html") 關於我們
                //- .map-item: a(href="/sitemap.html") 網站地圖
                .map-item: a(href="https://www.facebook.com/www.ocf.tw", translate="FOOTER_FACEBOOK") 臉書專頁
            .map-entry
                .map-caption(translate="FOOTER_PROJECT"): |專案
                .map-item: a(href="https://github.com/ocftw/ocf.tw", translate="FOOTER_SOURCECODE") 源碼集散地
            .map-entry
                .map-caption(translate="FOOTER_INFO"): |資訊
                .map-item: a(href="http://blog.ocf.tw/", translate="FOOTER_BLOG") 部落格

        #social_plugins

            div.footer-brand
                | ocf.tw 2015 |
                img(src="/imgs/logo.png")
                .build-id(ng-controller="BuildIdCtrl")
                  a(href="https://github.com/ocftw/ocf.tw") {{buildId}}

        script(type="text/javascript").
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o), m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m) })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-379894-19', 'ocf.tw');
            ga('send', 'pageview');
